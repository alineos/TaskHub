<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffdefe"
    android:id="@+id/pane">

    <ImageView
        android:id="@+id/imageView_favorite_listitem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:src="@drawable/logo_tarefa_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview_title_listitem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Lavar LouÃ§a"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/imageView_favorite_listitem"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview_date_listitem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="08/05/2023"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/textview_title_listitem"
        app:layout_constraintTop_toBottomOf="@id/textview_title_listitem" />

    <TextView
        android:id="@+id/textview_priority_listitem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alta"
        android:textColor="#FF0000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/textview_date_listitem"
        app:layout_constraintTop_toBottomOf="@id/textview_date_listitem" />

</androidx.constraintlayout.widget.ConstraintLayout>